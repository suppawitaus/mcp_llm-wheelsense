# MCP Smart Environment System Configuration
# Copy this file to .env and customize as needed
# All values are optional - defaults will be used if not specified

# Ollama Configuration
# URL of your Ollama server (default: http://127.0.0.1:11434)
OLLAMA_HOST=http://127.0.0.1:11434

# LLM Model Configuration
# Model name to use with Ollama (default: qwen2.5:7b)
# Make sure this model is installed: ollama pull qwen2.5:7b
MODEL_NAME=qwen2.5:7b

# Database Configuration
# Path to SQLite database file (default: data/smart_environment.db)
# Use absolute path or relative to project root
DATABASE_PATH=data/smart_environment.db

# Database backup directory (default: data/backups)
DATABASE_BACKUP_DIR=data/backups

# Enable SQL query logging for debugging (default: false)
# Set to "true" to see all database queries in console
ENABLE_DATABASE_LOGGING=false

# Feature Flags
# Use compact prompt format for better performance (default: false)
# Set to "true" to use shorter system prompts
USE_COMPACT_PROMPT=false
