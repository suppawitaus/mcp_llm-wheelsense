# MCP Smart Environment System - Environment Variables
# Copy this file to .env and modify as needed for your setup
# The .env file is ignored by git and should not be committed

# =============================================================================
# Required Configuration
# =============================================================================

# Ollama service host URL
# In Docker: use service name "ollama" (http://ollama:11434)
# For local development: use http://localhost:11434
OLLAMA_HOST=http://ollama:11434

# LLM model name to use
# Default: qwen2.5:7b
# The model will be automatically downloaded on first run if not present
MODEL_NAME=qwen2.5:7b

# =============================================================================
# Optional Configuration
# =============================================================================

# SQLite database file path
# Default: data/smart_environment.db
# Path is relative to project root or absolute
DATABASE_PATH=data/smart_environment.db

# Database backup directory
# Default: data/backups
# Path is relative to project root or absolute
DATABASE_BACKUP_DIR=data/backups

# Enable SQL query logging for database debugging
# Default: false
# Set to "true" to enable verbose SQL logging
ENABLE_DATABASE_LOGGING=false

# Use compact prompts for LLM to reduce token usage
# Default: false
# Set to "true" to use more compact prompt format
USE_COMPACT_PROMPT=false

# Streamlit server configuration (if needed)
# These can be set but typically use Docker port mapping instead
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=0.0.0.0
